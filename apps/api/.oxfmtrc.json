{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": false,
  "singleQuote": true,
  "printWidth": 100,
  "experimentalSortImports": {
    "type": "alphabetical",
    "order": "asc",
    "ignoreCase": true,
    "fallbackSort": {
      "type": "subgroup-order",
      "order": "asc"
    },
    "groups": [
      "builtin",
      ["external", "subpath"],
      "src",
      "internal",
      ["parent", "sibling", "index"],
      "style",
      "side_effect",
      "side_effect_style",
      "unknown"
    ],
    "newlinesBetween": true,
    "customGroups": [
      {
        "elementNamePattern": ["@src/**"],
        "groupName": "src"
      }
    ]
  },
  "experimentalTailwindcss": {
    "stylesheet": "./assets/css/main.css",
    "functions": ["clsx", "cn"]
  },
  "ignorePatterns": [
    "**/.snapshot-sage.json",
    "schema/schema.gql",
    "test/gql/**/*",
    "src/i18n/i18n.generated.ts"
  ]
}
