{
  "name": "@sageleaf/api",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "author": "",
  "files": [
    "dist",
    "temp"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "codegen": "graphql-codegen --config graphql-codegen.ts",
    "codegen:db": "./db-defs.sh",
    "codegen:schema": "SCHEMA_GEN=1 nest start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "pnpm exec oxlint --fix",
    "lint:ci": "pnpm exec oxlint --deny-warnings",
    "fmt": "pnpm exec oxfmt",
    "fmt:ci": "pnpm exec oxfmt --check",
    "check:migrations": "pnpm exec mikro-orm migration:check"
  },
  "dependencies": {
    "@apollo/server": "^5.4.0",
    "@as-integrations/express5": "^1.1.2",
    "@mikro-orm/core": "^6.6.6",
    "@mikro-orm/migrations": "^6.6.6",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.6",
    "@mikro-orm/reflection": "^6.6.6",
    "@mikro-orm/seeder": "^6.6.6",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/apollo": "^13.2.4",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.2.4",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "ajv": "^8.17.1",
    "better-auth": "^1.4.18",
    "body-parser": "^2.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv-flow": "^4.1.0",
    "dset": "^3.1.4",
    "express": "^5.1.0",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "helmet": "^8.0.0",
    "jsonld": "^8.3.3",
    "kysely": "^0.28.11",
    "kysely-knex": "^0.2.0",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "meilisearch": "^0.50.0",
    "nanoid": "^3.0.0",
    "nestjs-cls": "^6.2.0",
    "nestjs-i18n": "^10.5.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "sql-formatter": "^15.5.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@mikro-orm/cli": "^6.6.6",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.8",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.0",
    "@types/jsonld": "^1.5.15",
    "@types/lodash": "^4.17.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "=25.3.0",
    "@types/supertest": "^6.0.2",
    "graphql-tag": "^2.12.6",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.30.0+sha256.fde3cebbd4ed0d6d140b1983743bf575cdd4b15e4d5e5b257425152dce5b1b6a",
  "nx": {
    "targets": {
      "codegen:db": {
        "cache": true,
        "inputs": [
          "{projectRoot}/src/**/*.entity.ts"
        ],
        "outputs": [
          "{projectRoot}/temp/**/*"
        ]
      },
      "codegen:schema": {
        "cache": true,
        "inputs": [
          "{projectRoot}/src/**/*.ts"
        ],
        "outputs": [
          "{projectRoot}/schema/schema.gql"
        ]
      },
      "build": {
        "dependsOn": [
          "codegen",
          "codegen:db"
        ]
      },
      "test": {
        "dependsOn": [
          "codegen*"
        ]
      },
      "test:watch": {
        "continuous": true,
        "dependsOn": [
          "codegen*"
        ]
      }
    }
  }
}
