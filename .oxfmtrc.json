{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": false,
  "singleQuote": true,
  "printWidth": 100,
  "experimentalSortImports": {
    "type": "alphabetical",
    "order": "asc",
    "ignoreCase": true,
    "fallbackSort": {
      "type": "subgroup-order",
      "order": "asc"
    },
    "groups": [
      "builtin",
      ["external", "subpath"],
      "src",
      "internal",
      ["parent", "sibling", "index"],
      "style",
      "side_effect",
      "side_effect_style",
      "unknown"
    ],
    "newlinesBetween": true,
    "customGroups": [
      {
        "elementNamePattern": ["@src/**"],
        "groupName": "src"
      }
    ]
  },
  "experimentalTailwindcss": {
    "stylesheet": "./assets/css/main.css",
    "functions": ["clsx", "cn"]
  },
  "ignorePatterns": [
    "apps/api/src/db/migrations/.snapshot-sage.json",
    "apps/api/schema/schema.gql",
    "apps/api/test/gql/**/*",
    "apps/api/src/i18n/i18n.generated.ts",
    "apps/frontend/app/gql/**/*",
    "apps/science/app/gql/**/*",
    "packages/ui/app/gql/**/*"
  ],
  "overrides": [
    {
      "files": ["apps/frontend/**/*.vue"],
      "options": {
        "experimentalTailwindcss": {
          "stylesheet": "apps/frontend/app/assets/css/main.css",
          "functions": ["clsx", "cn"]
        }
      }
    }
  ]
}
